<div>
  <h1><%= @restaurant.name %></h1>
</div>

<div>
  <%= @restaurant.address %>
</div>

<div>
  <%= @restaurant.category %>
</div>

<div>
  <%= @restaurant.phone_number %>
</div>

<div>
<h2>Reviews</h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %></li>
  <% end %>
</ul>
</div>

<div>
  <%= link_to "Leave a review", new_restaurant_review_path(@restaurant) %>
</div>

<div>
  <%= link_to "Homepage", restaurants_path %>
</div>
